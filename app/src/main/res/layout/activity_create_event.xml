<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleCreateEventTextView"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Create an event"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/setTitleEditText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Pick a title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/setDescriptionEditText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Write description"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setTimeTextView"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Time"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/setDateTextView"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setTimeBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:text="Set Time" />

            <Button
                android:id="@+id/setDateBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:text="Set Date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type"
                android:layout_width="79dp"
                android:layout_height="44dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:text="Type"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/setTypeSpinner"
                android:layout_width="225dp"
                android:layout_height="62dp"
                android:gravity="center" />
        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="262dp" />

        <TextView
            android:id="@+id/mapHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="(Press and drag the marker to move it)"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/createEventBtn"
            android:layout_width="118dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:text="Apply" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>